/* components/realm/index.wxss */
.container {
    padding: 30rpx;
    background-color: #ffffff;
    box-sizing: border-box;
}
.sku-preview {
    display:flex;
    flex-direction:row;
}
.sku-img {
    width: 160rpx;
    height: 160rpx;
}
.sku-description {
    display:flex;
    flex-direction:column;
    justify-content: space-between;
    margin-left: 40rpx;
}
.discount-price {
    margin-left: 20rpx;
}
.price-row {
    display:flex;
    flex-direction:row;
    align-items: baseline;
}
.sku-pending {
    font-size: 20rpx;
}
.sku-pending > text:first-child {
    color: #999999;
}
.sku-pending > text:nth-child(2) {
    color: #666;
}
.hr {
    margin-top: 30rpx;
    height: 2rpx;
    width: 690rpx;
    background-color: #E9E9E9;
}
.stock {
    margin-left: 30rpx;
    font-size: 20rpx;
    color: #999;
}
.stock-pinch {
    margin-left: 30rpx;
    font-size: 20rpx;
    color: #D20109;
}
.counter-container {
    margin-top: 34rpx;
    display:flex;
    flex-direction:row;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 200rpx;
}
.counter-container > text {
    color: #555555;
    font-size: 24rpx;
}
