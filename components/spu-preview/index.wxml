<wxs src="../../wxs/price.wxs" module="p"></wxs>
<view class="container" bind:tap="onItemTap">
    <image bind:load="onImgLoad" data-pid="{{data.id}}" style="width: {{w}}rpx;height: {{h}}rpx" src="{{data.img}}"></image>
    <view class="content-container">
        <text class="title">{{data.title}}</text>
        <view class="tags">
            <block wx:for="{{tags}}" wx:key="{{index}}">
                <l-tag type="reading" size="super-mini" l-class="l-tag">{{item}}</l-tag>
            </block>
        </view>
        <view class="price-container">
            <l-price
                    value="{{p.mainPrice(data.price, data.discount_price).price}}"
                    color="#157658"
                    value-size="28"
                    unit-size="20"
                    autofix>
            </l-price>
            <l-price
                    l-class="discount-price"
                    wx:if="{{p.slashedPrice(data.price, data.discount_price).display}}"
                    deleted
                    color="#999999"
                    size="26"
                    autofix
                    value="{{p.slashedPrice(data.price, data.discount_price).price}}">
            </l-price>
        </view>
        <text class="subtitle">{{data.subtitle}}</text>
    </view>
</view>