.container {
    width: 340rpx;
    display: flex;
    flex-direction: column;
    box-shadow: 0 0 8px 0 rgba(119,163,149,0.2);
    margin-bottom: 30rpx;
    background-color: #ffffff;
}
.img {
    /*width: 100%;*/
    /*height: 360rpx;*/
}
.tags {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin-bottom: 8rpx;
    margin-top: 6rpx;
}
.title {
    font-size: 28rpx;
    color: #333333;
}
.l-tag {
    background-color: #DCEDE6 !important;
    color: #157658 !important;
    height: 36rpx !important;
    margin-right: 5rpx !important;
}
.content-container {
    display:flex;
    flex-direction:column;
    padding: 16rpx 16rpx 22rpx 0;
}
.price-container {
    display:flex;
    flex-direction:row;
    align-items: center;
}
.discount-price {
    margin-left: 20rpx;
}
.subtitle {
    font-size: 24rpx;
